{
  "description": "Outline is a fast, lightweight, rich-text editor.",
  "version": "0.0.5",
  "license": "MIT",
  "author": {
    "name": "Dominic Gannaway",
    "email": "dg@domgan.com"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm run build && npm start --prefix packages/outline-playground",
    "dev": "concurrently \"npm:watch\" \"npm start --prefix packages/outline-playground\"",
    "build": "node scripts/build.js",
    "build-prod": "node scripts/build.js --prod",
    "build-www": "node scripts/build.js --prod --www",
    "clean": "node scripts/build.js --clean",
    "watch": "node scripts/build.js --watch",
    "flow": "node ./scripts/tasks/flow.js",
    "test": "npm run build && jest",
    "lint": "node ./scripts/tasks/eslint.js",
    "debug-test": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "prettier": "node ./scripts/prettier.js write-changed",
    "prettier-all": "node ./scripts/prettier.js write",
    "prepare-release": "yarn build --prod && node ./scripts/prepare-release.js"
  },
  "devDependencies": {
    "@babel/plugin-transform-flow-strip-types": "^7.12.1",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "child-process-promise": "^2.2.1",
    "concurrently": "^5.3.0",
    "confusing-browser-globals": "^1.0.10",
    "eslint": "^7.12.1",
    "eslint-config-fbjs": "^3.1.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-for-of-loops": "^1.0.1",
    "eslint-plugin-no-function-declare-after-return": "^1.1.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "flow-bin": "^0.144.0",
    "google-closure-compiler": "^20201006.0.0",
    "jest": "26.6.0",
    "minimist": "^1.2.5",
    "prettier": "^2.1.2",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.33.1"
  },
  "dependencies": {
    "fs-extra": "^9.0.1"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/outline/npm"
    ]
  }
}
