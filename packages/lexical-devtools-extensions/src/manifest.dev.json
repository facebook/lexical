{
  "manifest_version": 2,
  "name": "Lexical Developer Tools",
  "description": "A cross-browser web extension for lexical developer",
  "version": "0.0.1",
  "version_name": "0.0.1",
  "minimum_chrome_version": "100",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "icons": {
    "16": "icons/lexical.png",
    "32": "icons/lexical.png",
    "48": "icons/lexical.png",
    "128": "icons/lexical.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/lexical.png",
      "32": "icons/lexical.png",
      "48": "icons/lexical.png",
      "128": "icons/lexical.png"
    }
  },
  "web_accessible_resources": ["icons/*", "js/*"],
  "permissions": [
    "storage",
    "file:///*",
    "*://*/*"
  ],
  "devtools_page": "devtools-loader.html",
  "background": {
    "scripts": ["js/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/injectGlobalHook.js"
      ],
      "run_at": "document_end"
    }
  ]
}
